<% provide(:blog, "active") %>

<div class="container">

      <div class="row-fluid">
			<div class="span6">
				<article class="well well-raised">
					<h4><i>Second star to the <font color="green"><u> left </u></font>and straight on till morning...</i>&nbsp;&nbsp;&nbsp;&nbsp;<%= image_tag "peterpan1.png" %></h4>
					
					<!--<h1><img src='peterpan1.png' alt='text' title='something' /></h1>--> 
					</article></div></div>

      <% content_for :body do %>
  <%= raw @page.content_for(Refinery::Pages.default_parts.first.to_sym) if Refinery::Pages.default_parts.any? %>

  <% if @posts.any? %>
    <section id="blog_posts">
      <%= render :partial => "/refinery/blog/shared/post", :collection => @posts %>
      <%= will_paginate @posts %>
    </section>
  <% else %>
    <p><%= t('.no_blog_articles_yet') %></p>
  <% end %>
<% end %>

<% content_for :side_body_prepend do -%>
  <%= raw @page.content_for(Refinery::Pages.default_parts.second.to_sym) %>
<% end if Refinery::Pages.default_parts.many? -%>
<%= render '/refinery/blog/shared/body_content_right' %>

<%= render "/refinery/content_page" %>

